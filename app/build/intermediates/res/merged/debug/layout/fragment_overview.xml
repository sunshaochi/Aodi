<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_45"
        android:background="@color/title_back_color" >

        <ImageView
            android:id="@+id/overview_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_shezhi" />

        <!--
             <ImageView
            android:id="@+id/overview_title_function_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_yunying"/>
        -->

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:background="@drawable/yyk"
            android:orientation="horizontal" >
            <TextView
                 android:id="@+id/tv_yunyin"
                 android:paddingTop="5dp"
                 android:paddingBottom="5dp"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:textSize="14sp"
                 android:textColor="@color/white"
                 android:layout_width="wrap_content"   
                 android:layout_height="wrap_content"                               
                 android:text="运营"
               
                />
            <View 
                 android:background="#ffffffff"
                 android:layout_width="1sp"   
                 android:layout_height="match_parent" 
                />
            <TextView
                 android:id="@+id/tv_kc"
                 android:paddingTop="5dp"
                 android:paddingBottom="5dp"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:textSize="14sp"
                 android:textColor="@color/white"
                 android:layout_width="wrap_content"   
                 android:layout_height="wrap_content"                               
                 android:text="库存"
               
                />
             <View 
                 android:background="#ffffffff"
                 android:layout_width="1sp"   
                 android:layout_height="match_parent" 
                />
             <TextView
                 android:id="@+id/tv_yinli"
                 android:paddingTop="5dp"
                 android:paddingBottom="5dp"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:textSize="14sp"
                 android:textColor="@color/white"
                 android:layout_width="wrap_content"   
                 android:layout_height="wrap_content"                               
                 android:text="盈利"
               
                />
           
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/overview_fragment_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.3dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_size_30"
            android:text="张伟"
            android:textColor="#000"
            android:textSize="@dimen/sp_size_15" />

        <TextView
            android:id="@+id/tv_stock_number_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_size_25"
            android:drawableRight="@drawable/right_arrow_36"
            android:gravity="center|right"
            android:paddingBottom="@dimen/dp_size_15"
            android:paddingLeft="@dimen/dp_size_20"
            android:paddingRight="@dimen/dp_size_10"
            android:paddingTop="@dimen/dp_size_15"
            android:textColor="@color/grey"
            android:textIsSelectable="false"
            android:textSize="@dimen/sp_size_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp_size_25"
        android:background="#ffe0e0e0" />

</LinearLayout>
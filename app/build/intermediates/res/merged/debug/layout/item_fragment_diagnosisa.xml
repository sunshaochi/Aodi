<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:minHeight="35dp"
        android:id="@+id/item_diadeal_linner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_diadeal_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="上官云长"
            android:textColor="@color/text_people"
            android:textSize="10.0dip" />
        
         <TextView
            android:id="@+id/item_diadeal_name0"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="18" />

        <TextView
            android:id="@+id/item_diadeal_name1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="18" />

        <TextView
            android:id="@+id/item_diadeal_name2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="12" />

        <TextView
            android:id="@+id/item_diadeal_name3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="92.43%" />
        
        <TextView
            android:id="@+id/tv_itemkcsl"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="34" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_diadeal_name4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="详  细"
                android:textColor="#ffff0000" />

            <View
                android:layout_width="35dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                
                android:background="#ffff0000" >
            </View>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
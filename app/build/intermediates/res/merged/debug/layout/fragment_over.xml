<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_45"
        android:background="@color/title_back_color" >
        
        <ImageView 
            android:id="@+id/overview_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_shezhi"/>
        
        <ImageView
            android:id="@+id/overview_title_function_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_yunying"/>
        
    </RelativeLayout>
    
    <FrameLayout 
        android:id="@+id/overview_fragment_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>

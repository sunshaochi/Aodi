<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_14"
        android:gravity="center" >

        <ImageView
            android:id="@+id/monitor_top_left"
            android:layout_width="@dimen/dp_size_40"
            android:layout_height="@dimen/dp_size_40"
            android:scaleType="centerInside"
            android:src="@drawable/iconfont_left" />

        <TextView
            android:id="@+id/monitor_top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/10/01-07"
            android:textColor="@color/text_people"
            android:textSize="@dimen/sp_size_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/monitor_top_right"
            android:layout_width="@dimen/dp_size_40"
            android:layout_height="@dimen/dp_size_40"
            android:scaleType="centerInside"
            android:src="@drawable/iconfont_right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_size_49"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/monitor_top_mode_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:text="@string/car_mode" />

        <LinearLayout
            android:id="@+id/monitor_top_car_mode_layout"
            android:layout_width="@dimen/dp_size_200"
            android:layout_height="@dimen/dp_size_32"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/monitor_top_mode_des"
            android:layout_toRightOf="@+id/monitor_top_mode_des"
            android:background="@drawable/shape_insurance_bg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/monitor_top_car_mode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_people"
                android:paddingLeft="@dimen/dp_size_10"
                android:textSize="@dimen/sp_size_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_size_10"
                android:src="@drawable/iconfont_xiala" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_1"
        android:layout_marginTop="@dimen/dp_size_10"
        android:background="#d6d6d6" />

</LinearLayout>
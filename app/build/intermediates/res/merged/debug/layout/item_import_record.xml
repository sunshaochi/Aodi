<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_extend_linner"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_extend_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="2016-10-10"
            android:textColor="@color/text_people"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/item_extend_name1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/text_profit"
            android:text="0" />

        <TextView
            android:id="@+id/item_extend_name2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/number_text"
            android:text="0" />
        
        <TextView
            android:id="@+id/item_extend_name3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"

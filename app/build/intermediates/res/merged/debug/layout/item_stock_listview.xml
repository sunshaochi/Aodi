<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_40"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_desc_model"
            android:layout_width="@dimen/dp_size_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="车型详细"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_appearance"
            android:layout_width="@dimen/dp_size_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="2"
            android:paddingRight="@dimen/dp_size_20"
            android:text="外观"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_interior"
            android:layout_width="@dimen/dp_size_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="2"
            android:paddingLeft="@dimen/dp_size_5"
            android:text="内饰"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_msrp"
            android:layout_width="@dimen/dp_size_100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MSRP"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="@dimen/dp_size_100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选配"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_13" />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="所属公司"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_stock_age"
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="库龄"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vin"
            android:layout_width="@dimen/dp_size_160"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="VIN"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_produce"
            android:layout_width="@dimen/dp_size_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#BBBBBB" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_50"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:background="@color/grey"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_iscar"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车型"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_report_title_first_prefer"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进店线索\n报价率"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报价\n订单率"
            android:textColor="@color/white"
            android:textSize="10sp" />
         <TextView
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成交率"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单\n交车率"
            android:textColor="@color/white"
            android:textSize="10sp" />

<!--
        <TextView
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="金融\n渗透率"
            android:textColor="@color/white"
            android:textSize="10sp" /> -->
    </LinearLayout>

</LinearLayout>
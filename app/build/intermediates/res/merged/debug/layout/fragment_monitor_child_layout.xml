<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <android.support.design.widget.TabLayout
        android:id="@+id/monitor_child_tablayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_40"
        app:tabIndicatorColor="#bb0a30"
        app:tabSelectedTextColor="@color/tab_title"
        app:tabTextColor="@color/text_people" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.5"
        android:background="@color/ITask_hint" />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/monitor_child_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
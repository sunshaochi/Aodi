<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_49"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/overview_top_start_time_layout"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/overview_top_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:text="2016-09-01"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overview_top_start_time"
                android:layout_marginBottom="@dimen/dp_size_5"
                android:text="@string/start_time"
                android:textColor="@color/text_people" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iconfont_xiala" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="fill_parent"
            android:background="#d6d6d6" />

        <RelativeLayout
            android:id="@+id/overview_top_end_time_layout"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/overview_top_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:text="2016-09-01"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overview_top_end_time"
                android:layout_marginBottom="@dimen/dp_size_5"
                android:text="@string/end_time"
                android:textColor="@color/text_people" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iconfont_xiala" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_49"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_car_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:text="@string/car_mode" />

        <LinearLayout
            android:id="@+id/overview_top_car_mode_layout"
            android:layout_width="@dimen/dp_size_200"
            android:layout_height="@dimen/dp_size_32"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_car_mode"
            android:layout_toRightOf="@+id/text_car_mode"
            android:background="@drawable/shape_insurance_bg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/overview_top_car_mode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_size_10"
                android:singleLine="true"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_size_10"
                android:src="@drawable/iconfont_xiala" />
        </LinearLayout>
    </RelativeLayout>

    <!-- <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="#d6d6d6" /> -->

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/overview_top_layout" />

    <CheckBox
        android:id="@+id/overview_operative_contrast_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:button="@drawable/checkbox_back"
        android:text="@string/contrast_mode" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/overview_operative_percent"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="28%"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_reduced_value"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:gravity="right"
                android:text="-11%" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_xssc"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_size_10"
            android:src="@drawable/overview_funnel_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/overview_operative_new"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_26"
                android:gravity="right"
                android:text="1234"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_first_in_num"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_22"
                android:gravity="right"
                android:text="234"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_quote_num"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_22"
                android:gravity="right"
                android:text="123"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_deal_num"
                android:layout_width="@dimen/dp_size_55"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_22"
                android:gravity="right"
                android:text="23"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_1"
        android:background="#d6d6d6" />

    <LinearLayout
         android:id="@+id/ll_zc"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_80"
        android:background="#F5F5F5" >

        <View
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="fill_parent"
            android:background="#d6d6d6" />

        <LinearLayout           
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:src="@drawable/reenter_icon" />

            <LinearLayout                
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_store_again"
                    android:textColor="@color/text_people"
                    android:textSize="@dimen/sp_size_11"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_size_5" >

                    <TextView
                        android:id="@+id/overview_operative_reenter_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2341"
                        android:textColor="@color/text_people"
                        android:textSize="@dimen/sp_size_30"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="äºº"
                        android:textColor="@color/text_people"
                        android:textSize="@dimen/sp_size_11"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="fill_parent"
            android:background="#d6d6d6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:text="@string/current_month_again"
                    android:textColor="@color/text_people"
                    android:textSize="@dimen/sp_size_11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_operative_dangyuezaici"
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:gravity="right"
                    android:text="123"
                    android:textColor="@color/text_average"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="#d6d6d6" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:text="@string/active_customer"
                    android:textColor="@color/text_people"
                    android:textSize="@dimen/sp_size_11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_operative_active_customer"
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:gravity="right"
                    android:text="124"
                    android:textColor="@color/text_average"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_size_1"
                android:background="#d6d6d6" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:text="@string/dormant_customer"
                    android:textColor="@color/text_people"
                    android:textSize="@dimen/sp_size_11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_operative_dormant_customer"
                    android:layout_width="@dimen/dp_size_60"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_marginRight="@dimen/dp_size_10"
                    android:gravity="right"
                    android:text="221"
                    android:textColor="@color/text_average"
                    android:textSize="@dimen/sp_size_14"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sc"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_40"
        android:background="@color/text_average" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="@dimen/dp_size_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:text="@string/first_in_test_drive_rate"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_first_in_try_reduced_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_first_in_try_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23%"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp_size_1"
            android:layout_marginTop="@dimen/dp_size_1"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="@dimen/dp_size_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:text="@string/reenter_store_rate"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_reenter_reduced_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_weight="1"
                android:gravity="center"
                android:text="11%"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview_operative_reenter_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23%"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_size_11"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_10"
        android:gravity="center_vertical" >

        <View
            android:layout_width="@dimen/dp_size_5"
            android:layout_height="@dimen/dp_size_15"
            android:layout_marginBottom="@dimen/dp_size_1"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:layout_marginTop="@dimen/dp_size_1"
            android:background="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:text="@string/data_description"
            android:textColor="@color/text_average"
            android:textSize="@dimen/sp_size_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/overview_operative_bottom_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginTop="@dimen/dp_size_10"
        android:text="@string/data_description"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_size_11" />

</LinearLayout>
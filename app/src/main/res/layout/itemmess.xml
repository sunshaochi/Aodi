<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"       
            android:id="@+id/ll_zx_mess"            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="2sp"
                android:layout_weight="1"
                android:background="#ebebeb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="以下是最新消息"
                android:textColor="#666666"
                android:textSize="10sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="2sp"
                android:layout_weight="1"
                android:background="#ebebeb" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_time_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#333333"
            android:padding="5dp"
            android:text="2017-9-12"
            android:textColor="#fbfbfbfb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mess_kuang"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/iv_xf"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_yy_mb" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_xf"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="库存"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_bt"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:text="上传提醒"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="库存状态超过1天未更新，请及时导入"
                android:textColor="#333333"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/tv_ck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="10dp"
                android:text="查看导入计入"
                android:textColor="#666666"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
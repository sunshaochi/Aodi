<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tab_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_size_2"
        android:textSize="14dp" />

    <View
        android:layout_width="@dimen/dp_size_5"
        android:layout_height="@dimen/dp_size_5"
        android:layout_gravity="right|top"
        android:layout_marginTop="@dimen/dp_size_2"
        android:background="@drawable/design_red_point" />

</LinearLayout>
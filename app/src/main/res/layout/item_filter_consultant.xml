<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_filter_consultant_catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="@dimen/dp_size_15"
        android:paddingTop="5dip"
        android:text="A"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <CheckBox
            android:id="@+id/item_filter_consultant_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:button="@drawable/checkbox_back_two" />

        <TextView
            android:id="@+id/item_filter_consultant_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_size_40"
            android:layout_gravity="center_vertical"
            android:padding = "@dimen/dp_size_5"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:gravity="center_vertical"
            android:text="hhhh"
            android:textColor="@color/text_people" 
            android:textSize="@dimen/sp_size_16"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_shezhi_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/imageView1"
                android:text="设置" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_setting_my_infor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0dip"
                android:text="我的信息"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/fragment_setting_change_password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="修改密码"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <RelativeLayout
            android:id="@+id/fragment_setting_change_password1"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34.0dip"
                android:text="车型模式"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/fragment_setting_cars_model_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView1"
                android:layout_marginRight="40.0dip"
                android:src="@drawable/butn_close" />
        </RelativeLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <RelativeLayout
            android:id="@+id/fragment_setting_change_password2"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36.0dip"
                android:text="顾问模式"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/fragment_setting_adviser_model_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginRight="40.0dip"
                android:src="@drawable/butn_close" />
        </RelativeLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/fragment_setting_import_record"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_import_reload_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="导入记录"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/fragment_setting_change_password3"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_help_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="帮助文档"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />
        
         <LinearLayout
            android:id="@+id/ll_kf"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"           
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_kf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="技术支持热线:4007-280-250"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>
         <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />
         <LinearLayout
             android:visibility="gone"
            android:id="@+id/ll_cjwt"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"           
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cjwt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text=""
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
             android:visibility="gone"
            android:id="@+id/view_line"
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/fragment_setting_pople_text_password3"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pople_text_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="名词释义"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />

        <LinearLayout
            android:id="@+id/fragment_setting_change_exit"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_safe_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35.0dip"
                android:text="安全退出"
                android:textColor="@color/text_people"
                android:textSize="14.0dip" />
        </LinearLayout>

        <View
            android:layout_width="190.0dip"
            android:layout_height="0.5dip"
            android:layout_marginLeft="35.0dip"
            android:background="#ffd6d6d6" />
    </LinearLayout>

</ScrollView>
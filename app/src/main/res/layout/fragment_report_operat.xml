<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_findfragment_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_40"
        app:tabIndicatorColor="#bb0a30"
        app:tabSelectedTextColor="@color/tab_title"
        app:tabTextColor="@color/text_people" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_0.5"
        android:background="@color/ITask_hint" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_size_49"
        android:visibility="gone"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/fragment_star_adc_rela"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_weight="1.0" >

            <TextView
                android:id="@+id/fragment_adc_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:text="2016-09-01"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_adc_start_time"
                android:layout_marginBottom="@dimen/dp_size_5"
                android:text="@string/start_time"
                android:textColor="@color/text_people" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iconfont_xiala" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_size_1"
            android:layout_height="fill_parent"
            android:background="#ffd6d6d6" />

        <RelativeLayout
            android:id="@+id/fragment_end_adc_rela"
            android:layout_width="@dimen/dp_size_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_10"
            android:layout_marginRight="@dimen/dp_size_10"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_adc_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_5"
                android:text="2016-09-01"
                android:textColor="@color/text_people"
                android:textSize="@dimen/sp_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_adc_end_time"
                android:layout_marginBottom="@dimen/dp_size_5"
                android:text="@string/end_time"
                android:textColor="@color/text_people" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iconfont_xiala" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_report_fragment_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

   

</LinearLayout>